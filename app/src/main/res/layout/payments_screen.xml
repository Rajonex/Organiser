<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    >


        <include
            layout="@layout/custom_toolbar_arrows"
            android:id="@+id/appBarArrow"/>

    <TextView
        android:id="@+id/name_lastname"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:scaleType="centerCrop"
        android:text="Student"
        />




    <TextView
        android:id="@+id/num_lessons"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/name_lastn"
        android:layout_toRightOf="@+id/name_lastn"
        android:text="ilosc odbytych lekcji"
        />

    <TextView
        android:id="@+id/sum_to_pay"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/num_lessons"
        android:layout_toRightOf="@+id/num_lessons"
        android:text="suma do zaplaty"
        />

    <TextView
        android:id="@+id/sum_payed"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/sum_to_pay"
        android:layout_toRightOf="@+id/sum_to_pay"
        android:text="zaplacono"
        />

