<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:fillViewport="false">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    >

    <include
        layout="@layout/custom_toolbar"
        android:id="@+id/appBar"

        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Nazwa grupy" />

    <EditText
        android:id="@+id/add_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        android:ems="2"
        android:inputType="textPersonName"
         />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Lista studentow" />

    <fragment
        android:name="activities.CheckboxStudentListActivity"
        android:id="@+id/checkbox_student_list"
        android:layout_width="match_parent"
        android:layout_height="119dp" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Cena za lekcje"
         />

    <EditText
        android:id="@+id/add_group_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        android:ems="2"
        android:inputType="number|numberSigned|numberDecimal"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Dzień tygodnia"
        />

    <Spinner
        android:id="@+id/spinner_day"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Godzina zajęć"
        />

    <Button
        android:id="@+id/button_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Godzina"/>

</LinearLayout>
</ScrollView>