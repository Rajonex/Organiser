<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/myTheme_theme_accent</item>
        <item name="android:textColorSecondary">@color/myTheme_theme_accent</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_orange_dark</item>
        <item name="android:textColorPrimaryInverse">@android:color/holo_orange_dark</item>
        <item name="android:colorBackground">@color/myTheme_theme_background</item>
        <item name="android:colorButtonNormal">@color/myTheme_theme_button</item>
        <item name="colorButtonNormal">@color/myTheme_theme_button</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/myTheme_theme_background</item>
        <item name="android:statusBarColor">@color/lineColor</item>
    </style>

    <style name="MyThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lineColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/myThemeLight_theme_accent</item>
        <item name="android:textColorSecondary">@color/myThemeLight_theme_accent</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_orange_dark</item>
        <item name="android:textColorPrimaryInverse">@android:color/holo_orange_dark</item>
        <item name="android:colorBackground">@color/myThemeLight_theme_background</item>
        <item name="android:colorButtonNormal">@color/myThemeLight_theme_button</item>
        <item name="colorButtonNormal">@color/myThemeLight_theme_button</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/myThemeLight_theme_background</item>
        <item name="android:statusBarColor">@color/lineColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/default_theme_accent</item>
        <item name="android:textColorSecondary">@color/default_theme_accent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BrightTheme" parent="Theme.AppCompat.Light.NoActionBar" />



</resources>